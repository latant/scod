{
  "compilerOptions": {
    "strict": true,
    "incremental": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ES2019",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "lib": ["ES2021.String"],
    "types": ["node", "jest"],
  },
  "include": ["src/**/*"]
}

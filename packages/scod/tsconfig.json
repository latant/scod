{
  "compilerOptions": {
    "strict": true,
    "incremental": true,
    "module": "ES2020",
    "esModuleInterop": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "lib": ["ES2020"],
    "types": ["jest"],
  },
  "include": ["src/**/*"]
}
